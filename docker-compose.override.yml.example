# Docker Compose override template for development
# Copy this file to docker-compose.override.yml for local development
# The override file is automatically loaded by docker-compose

version: '3.8'

services:
  homepot-client:
    environment:
      - HOMEPOT_ENV=development
      - HOMEPOT_DEBUG=true
    volumes:
      # Mount source code for hot reload in development
      - ./src:/app/src:ro
      - ./data:/app/data
      - ./logs:/app/logs
    # Override ports for development (avoid conflicts)
    ports:
      - "8000:8000"
