# HOMEPOT Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
# HOMEPOT now uses PostgreSQL for production-ready architecture
# Development: postgresql://homepot_user:homepot_dev_password@localhost:5432/homepot_db
# Production: Set secure credentials in production environment
DATABASE__URL=postgresql://homepot_user:homepot_dev_password@localhost:5432/homepot_db

# Legacy SQLite (for reference, no longer recommended):
# DATABASE__URL=sqlite:///../data/homepot.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# Security
SECRET_KEY=homepot-dev-secret-change-in-production
API_KEY_HEADER=X-API-Key

# Logging
LOG_LEVEL=INFO

# Push Notification Credentials (Optional - use simulation mode if not set)
# FCM (Firebase Cloud Messaging) - Android/Linux
FCM_CREDENTIALS_PATH=

# WNS (Windows Notification Service) - Windows
WNS_PACKAGE_SID=
WNS_CLIENT_SECRET=

# APNs (Apple Push Notification service) - iOS/macOS
APNS_TEAM_ID=
APNS_KEY_ID=
APNS_AUTH_KEY_PATH=

# Web Push (Modern Browsers) - Chrome/Firefox/Safari/Edge
WEB_PUSH_VAPID_PRIVATE_KEY=
WEB_PUSH_VAPID_PUBLIC_KEY=
WEB_PUSH_VAPID_SUBJECT=mailto:admin@example.com

# MQTT Push (IoT/OT Devices) - Sensors/PLCs/Industrial Controllers
MQTT_BROKER_HOST=
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=false
MQTT_CLIENT_ID=
MQTT_QOS=1
MQTT_RETAIN=false

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10

# Agent Simulation
ENABLE_AGENT_SIMULATION=true
