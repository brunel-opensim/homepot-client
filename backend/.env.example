# HOMEPOT Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=sqlite:///./data/homepot.db
# For PostgreSQL: postgresql://user:password@localhost:5432/homepot

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# Security
SECRET_KEY=homepot-dev-secret-change-in-production
API_KEY_HEADER=X-API-Key

# Logging
LOG_LEVEL=INFO

# Push Notification Credentials (Optional - use simulation mode if not set)
# FCM (Firebase Cloud Messaging) - Android/Linux
FCM_CREDENTIALS_PATH=

# WNS (Windows Notification Service) - Windows
WNS_PACKAGE_SID=
WNS_CLIENT_SECRET=

# APNs (Apple Push Notification service) - iOS/macOS
APNS_TEAM_ID=
APNS_KEY_ID=
APNS_AUTH_KEY_PATH=

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10

# Agent Simulation
ENABLE_AGENT_SIMULATION=true
