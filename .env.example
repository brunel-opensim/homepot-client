# HOMEPOT Client Environment Configuration
# Copy this file to .env and update with your actual values

# ====================================
# Application Settings
# ====================================
APP_NAME=HOMEPOT Client
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=production

# ====================================
# Server Configuration
# ====================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ====================================
# Database Settings
# ====================================
# PostgreSQL (recommended for production)
DATABASE__URL=postgresql://homepot_user:homepot_dev_password@localhost:5432/homepot_db
# For SQLite (testing only): sqlite:///./data/homepot.db
DATABASE__ECHO_SQL=False
DATABASE__POOL_SIZE=5
DATABASE__MAX_OVERFLOW=10

# ====================================
# Docker Compose PostgreSQL Settings
# ====================================
# Used by docker-compose.yml to configure PostgreSQL container
POSTGRES_DB=homepot_db
POSTGRES_USER=homepot_user
POSTGRES_PASSWORD=homepot_dev_password
POSTGRES_PORT=5432

# ====================================
# Authentication & Security
# ====================================
AUTH__SECRET_KEY=your-secret-key-change-this-in-production
AUTH__ALGORITHM=HS256
AUTH__ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH__API_KEY_HEADER=X-API-Key

# ====================================
# Redis Configuration
# ====================================
REDIS__URL=redis://localhost:6379/0
REDIS__MAX_CONNECTIONS=10
REDIS__SOCKET_TIMEOUT=30

# ====================================
# Push Notifications
# ====================================
PUSH__ENABLED=True
PUSH__DEFAULT_TTL=300
PUSH__MAX_PAYLOAD_SIZE=4096
PUSH__COLLAPSE_KEY_PREFIX=homepot

# ====================================
# Device Management
# ====================================
DEVICES__HEALTH_CHECK_INTERVAL=60
DEVICES__HEALTH_CHECK_TIMEOUT=10
DEVICES__DEVICE_OFFLINE_THRESHOLD=300
DEVICES__MAX_CONCURRENT_JOBS=10

# ====================================
# WebSocket Settings
# ====================================
WEBSOCKET__ENABLED=True
WEBSOCKET__PING_INTERVAL=20
WEBSOCKET__PING_TIMEOUT=10
WEBSOCKET__MAX_CONNECTIONS=100

# ====================================
# Logging Configuration
# ====================================
LOGGING__LEVEL=INFO
LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING__FILE_PATH=
LOGGING__MAX_SIZE_MB=10
LOGGING__BACKUP_COUNT=5

# ====================================
# Mobivisor Integration (Dealdio)
# ====================================
# Mobivisor API base URL
MOBIVISOR_API_URL=https://mydd.mobivisor.com/

# Mobivisor Bearer Token (obtain from Dealdio)
# IMPORTANT: Never commit this token to version control!
MOBIVISOR_API_TOKEN=your_bearer_token_here

# ====================================
# Development & Testing
# ====================================
# Uncomment for development
# DEBUG=True
# ENVIRONMENT=development
# DATABASE__ECHO_SQL=True
# LOGGING__LEVEL=DEBUG
